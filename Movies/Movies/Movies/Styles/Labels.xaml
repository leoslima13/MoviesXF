<?xml version="1.0" encoding="UTF-8"?>

<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="TitleLabel" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource RobotoMedium}" />
        <Setter Property="TextColor" Value="{StaticResource WhiteColor}" />
        <Setter Property="FontSize" Value="{StaticResource X-Large-Font}" />
    </Style>
    
    <Style x:Key="ContentLabel" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource RobotoRegular}" />
        <Setter Property="TextColor" Value="{StaticResource WhiteColor}" />
        <Setter Property="FontSize" Value="{StaticResource Small-Font}" />
        <Setter Property="HorizontalTextAlignment" Value="Start" />
    </Style>

</ResourceDictionary>